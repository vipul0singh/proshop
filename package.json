{
  "name": "proshop",
  "version": "1.0.0",
  "description": "eCommerce application build with MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "npm install && node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Vipul Singh",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "color": "^5.0.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "dotenv": "^17.2.3",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
